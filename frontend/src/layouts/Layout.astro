---
export interface Props {
  title?: string;
  description?: string;
}

const { title = 'VaultPilot - Smart Vault AI App', description = 'Smart vault management DApp with AI-powered DeFi strategies' } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-primary-black text-white font-sans antialiased">
    <div class="relative overflow-hidden">
      <!-- Background gradient -->
      <div class="fixed inset-0 bg-gradient-to-br from-primary-black via-primary-black to-primary-purple/5 -z-10"></div>
      <div class="fixed top-0 right-0 w-1/3 h-1/3 bg-primary-green/5 rounded-full blur-3xl -z-10"></div>
      <div class="fixed bottom-0 left-0 w-1/4 h-1/4 bg-primary-purple/5 rounded-full blur-3xl -z-10"></div>
      
      <!-- AI Orb Animation -->
      <div class="fixed top-1/4 left-1/4 w-32 h-32 bg-gradient-to-r from-primary-green/20 to-primary-purple/20 rounded-full blur-2xl animate-pulse -z-10"></div>
      <div class="fixed bottom-1/3 right-1/3 w-24 h-24 bg-gradient-to-r from-primary-purple/15 to-primary-green/15 rounded-full blur-xl animate-pulse -z-10" style="animation-delay: 1s;"></div>
      
      <slot />
    </div>
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-feature-settings: 'liga', 'kern';
  }
</style>