---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import CTAButton from '../components/CTAButton';
---

<Layout title="Settings - VaultPilot">
  <Navbar />
  
  <main class="min-h-screen py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="mb-12 animate-fade-in">
        <h1 class="text-4xl font-bold text-white mb-4">
          <span class="bg-gradient-to-r from-primary-green to-primary-purple bg-clip-text text-transparent">Settings</span>
        </h1>
        <p class="text-xl text-gray-300">
          Customize your VaultPilot experience and manage your preferences.
        </p>
      </div>

      <!-- Settings Sections -->
      <div class="space-y-8">
        <!-- Profile Settings -->
        <div class="p-8 bg-gradient-to-br from-gray-900/50 to-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-2xl animate-fade-in">
          <h2 class="text-2xl font-semibold text-white mb-6">Profile Settings</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-gray-300 text-sm font-medium mb-2">Display Name</label>
              <input
                type="text"
                value="Anonymous User"
                class="w-full px-4 py-3 bg-gray-800/50 border border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-green focus:border-transparent text-white"
              />
            </div>
            
            <div>
              <label class="block text-gray-300 text-sm font-medium mb-2">Email Notifications</label>
              <select class="w-full px-4 py-3 bg-gray-800/50 border border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-green focus:border-transparent text-white">
                <option>All Notifications</option>
                <option>Important Only</option>
                <option>Disabled</option>
              </select>
            </div>
          </div>

          <div class="mt-6">
            <CTAButton variant="green" client:load>
              Save Profile
            </CTAButton>
          </div>
        </div>

        <!-- Theme Settings -->
        <div class="p-8 bg-gradient-to-br from-gray-900/50 to-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-2xl animate-fade-in">
          <h2 class="text-2xl font-semibold text-white mb-6">Appearance</h2>
          
          <div class="space-y-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Dark Mode</h3>
                <p class="text-gray-400 text-sm">Toggle between light and dark themes</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" checked class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-green/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-gradient-to-r peer-checked:from-primary-green peer-checked:to-primary-purple"></div>
              </label>
            </div>

            <div>
              <label class="block text-gray-300 text-sm font-medium mb-2">Accent Color</label>
              <div class="flex space-x-4">
                <button class="w-8 h-8 bg-gradient-to-r from-primary-green to-primary-purple rounded-full ring-2 ring-primary-green ring-offset-2 ring-offset-gray-900"></button>
                <button class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full"></button>
                <button class="w-8 h-8 bg-gradient-to-r from-pink-500 to-red-500 rounded-full"></button>
                <button class="w-8 h-8 bg-gradient-to-r from-yellow-500 to-orange-500 rounded-full"></button>
              </div>
            </div>
          </div>
        </div>

        <!-- Trading Preferences -->
        <div class="p-8 bg-gradient-to-br from-gray-900/50 to-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-2xl animate-fade-in">
          <h2 class="text-2xl font-semibold text-white mb-6">Trading Preferences</h2>
          
          <div class="space-y-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Auto-Compound Rewards</h3>
                <p class="text-gray-400 text-sm">Automatically reinvest vault rewards</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" checked class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-green/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-gradient-to-r peer-checked:from-primary-green peer-checked:to-primary-purple"></div>
              </label>
            </div>

            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Gas Optimization</h3>
                <p class="text-gray-400 text-sm">Optimize transaction timing for lower gas fees</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" checked class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-green/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-gradient-to-r peer-checked:from-primary-green peer-checked:to-primary-purple"></div>
              </label>
            </div>

            <div>
              <label class="block text-gray-300 text-sm font-medium mb-2">
                Risk Tolerance: <span class="text-primary-green">Medium</span>
              </label>
              <input 
                type="range" 
                min="1" 
                max="10" 
                value="5" 
                class="w-full h-2 bg-gray-700 rounded-lg appearance-none cursor-pointer slider"
              />
              <div class="flex justify-between text-xs text-gray-400 mt-1">
                <span>Conservative</span>
                <span>Aggressive</span>
              </div>
            </div>
          </div>
        </div>

        <!-- AI & Automation -->
        <div class="p-8 bg-gradient-to-br from-gray-900/50 to-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-2xl animate-fade-in">
          <h2 class="text-2xl font-semibold text-white mb-6">AI & Automation</h2>
          
          <div class="space-y-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Enable AI Advisor</h3>
                <p class="text-gray-400 text-sm">Get personalized investment recommendations</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" checked class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-green/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-gradient-to-r peer-checked:from-primary-green peer-checked:to-primary-purple"></div>
              </label>
            </div>

            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">MCP Integration</h3>
                <p class="text-gray-400 text-sm">Enable Model Context Protocol for enhanced AI features</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-green/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-gradient-to-r peer-checked:from-primary-green peer-checked:to-primary-purple"></div>
              </label>
            </div>

            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Auto-Rebalance</h3>
                <p class="text-gray-400 text-sm">Automatically rebalance portfolio based on market conditions</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" checked class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-green/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-gradient-to-r peer-checked:from-primary-green peer-checked:to-primary-purple"></div>
              </label>
            </div>
          </div>
        </div>

        <!-- Security Settings -->
        <div class="p-8 bg-gradient-to-br from-gray-900/50 to-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-2xl animate-fade-in">
          <h2 class="text-2xl font-semibold text-white mb-6">Security</h2>
          
          <div class="space-y-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Two-Factor Authentication</h3>
                <p class="text-gray-400 text-sm">Add an extra layer of security to your account</p>
              </div>
              <CTAButton variant="outline" size="sm" client:load>
                Enable 2FA
              </CTAButton>
            </div>

            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-white font-medium">Transaction Notifications</h3>
                <p class="text-gray-400 text-sm">Get notified of all vault transactions</p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" checked class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-green/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-gradient-to-r peer-checked:from-primary-green peer-checked:to-primary-purple"></div>
              </label>
            </div>

            <div class="pt-4 border-t border-gray-700">
              <CTAButton variant="green" className="mr-4" client:load>
                Save All Settings
              </CTAButton>
              <button class="text-gray-400 hover:text-white transition-colors">
                Reset to Defaults
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>